gem 'faker'
gem 'pry'
gem 'rails-erd'
gem 'shoulda-matchers', '~> 3.1'
gem 'active_model_serializers', '~> 0.10.0'

group :development, :test do
  gem 'byebug', platform: :mri
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :development do
  gem 'listen', '~> 3.0.5'
end

